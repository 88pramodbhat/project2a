<%- layout("layout/boilerplate") %>

<h1 class="text-center mb-4">All Listings</h1>

<div class="d-flex flex-wrap gap-3 justify-content-center">
  <% for (let list of all_listings) { %>
    <div class="card shadow-sm" style="width: 18rem;">
      <img src="<%= list.image.url %>" class="card-img-top" alt="listing_image" style="height: 200px; object-fit: cover;">
      <div class="card-body">
        <p class="card-text mb-2">
          <strong>Title:</strong> <%= list.title %> <br>
          <strong>Price:</strong> â‚¹<%= list.price %>
        </p>
        <a href="/listings/<%= list._id %>" class="btn btn-primary btn-sm">View</a>
        <% if (currentUser && currentUser._id.toString() === list.owner.toString()) { %>
          <a href="/listings/<%= list._id %>/edit" class="btn btn-secondary btn-sm">Edit</a>
        <% } %>
      </div>
    </div>
  <% } %>
</div>

<div class="text-center mt-4">
  <a href="/listings/new" class="btn btn-success">Create New Listing</a>
</div>
